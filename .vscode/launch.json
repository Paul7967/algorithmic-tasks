{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run ts-node",
      "runtimeExecutable": "ts-node",
      "cwd": "${workspaceFolder}",
      "args": []
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      // уазываем путь к файлу для запуска в браузере
      "file": "${workspaceFolder}/browserRun/index.html"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript File",
      // указываем путь r ts файлу для запуска в отладчике
      "program": "${workspaceFolder}/leetcode/0006. _Zigzag Conversion.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "console": "integratedTerminal"
    }
  ]
}
